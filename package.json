{
  "name": "weather-server",
  "version": "1.0.0",
  "description": "MCP weather server",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc && node -e \"console.log('Successfully built MCP server')\"",
    "dev": "tsx src/index.ts",
    "start": "node build/index.js",
    "inspect": "npx @modelcontextprotocol/inspector tsx src/index.ts",
    "inspect-built": "node -e \"require('dotenv').config()\" && npx @modelcontextprotocol/inspector node build/index.js",
    "test:built": "node build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "dotenv": "^16.6.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
